<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUICardsGUI.TotalWinningScore"
             Title="TotalWinningScore">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Label 
            Text="What should the winning score be?"
            SemanticProperties.Description="What is the winning score for the whole game?"
            FontSize="18"
            HorizontalOptions="Center" />
        <Entry
            x:Name="TotalWinningScoreEntry"
            SemanticProperties.Description="Enter the total winning score you want in the game"
            Placeholder="Enter the total winning score you want in the game" />
        <Button
            x:Name="TotalWinningScoreButton"
            Text="Enter :)"
            SemanticProperties.Hint="Gets the total winning score and asks if people want that"
            Clicked="TotalWinningScoreButton_Clicked"
            HorizontalOptions="Center" BackgroundColor="LightCoral"/>
        <Label x:Name="TotalWinningScoreLabel" Padding="20"
            TextColor="White" BackgroundColor="LightSkyBlue"
            SemanticProperties.Description="Shows the total winning score" />
    </VerticalStackLayout>
</ContentPage>