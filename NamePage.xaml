<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUICardsGUI.NamePage"
             Title="NamePage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Label 
            Text="What is your name?"
            SemanticProperties.Description="What are the names of the players?"
            FontSize="18"
            HorizontalOptions="Center" />
            <Entry
            x:Name="NameOfPlayers"
            SemanticProperties.Description="Enter the names of players who will play"
            Placeholder="Enter Your Name" />
            <Button
                x:Name="IntroduceNameButton"
                Text="Enter :)"
                SemanticProperties.Hint="Gets names of players"
                Clicked="IntroduceNameButton_Clicked"
                HorizontalOptions="Center" BackgroundColor="LightCoral"/>
            <Label x:Name="NamesOfPlayers" Padding="20"
                TextColor="White" BackgroundColor="LightSkyBlue"
                SemanticProperties.Description="Shows the names of players" />
    </VerticalStackLayout>
</ContentPage>